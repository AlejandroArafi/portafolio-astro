---
// src/components/HeroSection.astro
---
<section class="hero">
    <div class="content">
      <h1>Alejandro Figueroa</h1>
      <h2 class="subtitle">Desarrollador Frontend</h2>
      <a href="/about#about-section" class="btn">Conoce más sobre lo que hago</a>
    </div>
  </section>
  
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      overflow: hidden;
      padding: 0;
      overflow-x: hidden;
    }

    .hero {
      background-size: cover;
      background-position: center;
      min-height: 100vh; /*innecesario?*/
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
      color: white;
      padding: 0 2rem;
      overflow-x: hidden;
      margin-top: -2rem;
    }
  
    .content {
      text-align: center;
      max-width: 100%;
     
    }
  
    .content h1 {
      font-size: 3.2rem; /* 4 */
      margin-bottom: 0rem;
      color: #34373C;
      font-family: 'Jost';
     /* box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1);  Efecto de elevación inicial */
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.215); /* Efecto de sombra para el texto */
    
    }
    .content .subtitle {
      font-size: 1.6rem;
      color: #34373C;
      margin-bottom: 1.5rem; /* Espacio debajo del subtítulo */
      letter-spacing: 7.9px; /*1.5*/
      font-family: 'Jost';
      text-shadow: 1.5px 1.5px 4px rgba(0, 0, 0, 0.166); /* Efecto de sombra para el texto */
    }


    .btn {
  text-decoration: none;
  color: white;
  /*background-color: #d5c6ad;*/
  /*background-color: #eeb35fe7;*/
  background-color: #a8e6cf;
  padding: 0.8rem 2rem;
  border-radius: 5px;
  font-size: 1.2rem;
  transition: background-color 0.3s, box-shadow 0.3s, transform 0.3s;
  margin-top: 1rem; /* Añade espacio encima del botón */
  box-shadow: 0 6px 8px rgba(0, 0, 0, 0.1); /* Efecto de elevación inicial */
  text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.200); /* Efecto de sombra para el texto */
}

.btn:hover {
  background-color: #92d8b8;
  box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2); /* Aumenta la sombra al hacer hover */
  transform: translateY(-3px); /* Mueve el botón ligeramente hacia arriba */
}


@media (max-width: 768px) {
 /* .hero{
    padding: 0 1rem;
    justify-content: center;
    align-items: center;
  }*/
  .hero {
    background-size: cover; /* Reducir el tamaño de la imagen */
    background-position: center; /* Centrar la imagen */
    height: 100vh; /* Reducir el tamaño de la altura */
    display: flex; /* Centrar el contenido */
    align-items: center; /* Centrar el contenido verticalmente */
    overflow: hidden; /*evita scroll inesperado*/
    padding: 0 1rem; /* Reducir padding para evitar desbordamiento */
    margin-bottom: -2rem;
      }

  .content h1 {
    font-size: 1.8rem;
    /*white-space: nowrap;*/
  }

  .content .subtitle {
    font-size: 1.2rem;
    letter-spacing: 2px;
    margin-bottom: 1rem;
    /*white-space: nowrap;*/
    
  }

  .btn {
   
    font-size: 1rem;
    padding: 0.6rem 1.5rem;
}
}
  </style>
  