---
const { title, description, imageUrl, link, footerText } = Astro.props;
---

<div class="project-card">
  <img class="project-image" src={imageUrl} alt={title} />
  <div class="project-content">
    <h2 class="project-title">{title}</h2>
    <div class="project-footer">
      <p>{footerText}</p>
    </div>
</div>

<style>
  .project-card {
    max-width: 350px;
    max-height: 600px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
    transition: transform 0.5s ease, box-shadow 0.3s ease;
    margin: 0 auto;
    margin-bottom: 14%;
    margin-top: 5rem;
  }

  .project-card:hover {
    transform: scale(0.97);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
  }

  .project-image {
    width: 100%;
    height: 500px;
    object-fit: cover;
  }

  .project-content {
    padding: 16px;
    display: flex;
    justify-content: center;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: bold;
    margin-bottom: 8px;
    
  }


  .project-footer {
    background-color: #f7f7f7;
    padding: 10px;
    text-align: center;
    border-top: 1px solid #e0e0e0;
    border-radius: 13px;
    
  }

  .project-footer p {
    margin: 0;
    font-size: 1.1rem;
    color: #777777;
    font-family: 'Jost';
  }

  .project-description {
    color: #4a4a4a;
    font-size: 1.1rem;
    margin-bottom: 16px;
  }

  .project-link-container {
    padding: 16px;
  }

  .project-link {
    background-color: #007bff;
    color: #ffffff;
    text-decoration: none;
    padding: 8px 16px;
    border-radius: 4px;
    display: inline-block;
  }

  .project-link:hover {
    background-color: #0056b3;
  }
  @media (max-width: 768px) {
    .project-card {
     width: 80%;
     height: auto;
    
     
    }
  }


</style>
